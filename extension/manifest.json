{
  "manifest_version": 2,
  "name": "Lyspace",
  "version": "0.1",
  "description": "Just lyspace for now",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_title": "Lyspace",
    "default_popup": "dist/index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["background.js"]
    }
  ]
}
