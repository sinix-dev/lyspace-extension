{
  "manifest_version": 2,
  "name": "Lyspace",
  "version": "0.1",
  "description": "Just lyspace for now",
  "permissions": ["*://*.youtube.com/*", "*://*.lyspace.co/*", "webRequest", "webRequestBlocking", "webNavigation"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_scripts/youtube.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icons/lyspace-logo-48.png",
    "96": "icons/lyspace-logo-96.png"
  },
  "browser_action": {
    "default_title": "Lyspace",
    "default_popup": "public/index.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
